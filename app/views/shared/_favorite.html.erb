<% if restaurant.is_favorited?(current_user) %>
  <%= button_to unfavorite_restaurant_path(restaurant), class: "btn btn-default", method: :post do %>
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true">取消收藏</span>
  <% end %>
<% else %>
  <%= button_to favorite_restaurant_path(restaurant), class: "btn btn-default", method: :post do %>
    <span class="glyphicon glyphicon-star" aria-hidden="true">收藏</span>
  <% end %>
<% end %>

<% if restaurant.is_liked?(current_user) %>
  <span class="glyphicon glyphicon-heart" aria-hidden="true"> Already Liked</span>
  <%= button_to unlike_restaurant_path(restaurant), class: "btn btn-info", method: :post do %>
  <span class="glyphicon glyphicon-remove" aria-hidden="true"> Unlike</span>
  <% end %>
<% else %>
  <%= button_to like_restaurant_path(restaurant), class: "btn btn-info", method: :post do %>
  <span class="glyphicon glyphicon-heart" aria-hidden="true"> Like</span>
  <% end %>
<% end %>
