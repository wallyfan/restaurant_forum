<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image.url, width: '600px', class: "img-responsive center-block" if @restaurant.image? %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>營業時間:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>聯絡電話:</strong> <%= @restaurant.tel %></li>
          <li><strong>餐廳地址:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>
    <div class="clearfix">

    </div>
  </div>
      <!-- 顯示與餐廳相關的評論 -->
    <% @restaurant.comments.each do |comment| %>
    <div>
      <h4><%= comment.user.email.split('@').first %></h4>
      <p><%= simple_format comment.content %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(comment.created_at) %> </em>
      </p>
    </div>
    <hr>
    <% end %>
  <div>
      <hr>
    <%= link_to '回餐廳目錄', :back %>
      <hr>
  </div> 
</div>

<div class="container">
  <div class="row">
   <%= form_for [@restaurant, @comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "留個言吧", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
    </div>
  <% end %>
  </div>
</div>
