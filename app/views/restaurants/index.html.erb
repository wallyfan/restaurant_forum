<div class="container">

  <h1>--餐廳前台--</h1>

  <div class="row">

    <div class="col-md-12">
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>餐廳名稱</th>
            <th>餐廳照片</th>
            <th>餐廳電話</th>
            <th>餐廳地址</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <td width="10%">
              <%= restaurant.name %>
              <br>
              <%= link_to '詳細介紹', :controller => 'restaurants', :action => 'show', :id => restaurant %>
            </td>
            <td>
            <%= image_tag restaurant.image.url, width: '300px', class: "img-responsive center-block" if restaurant.image? %>
            </td>
            <td width="10%">
             <%= restaurant.tel %>
            </td>
            <td width="30%">
            <%= restaurant.address %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>

  </div>
</div>
